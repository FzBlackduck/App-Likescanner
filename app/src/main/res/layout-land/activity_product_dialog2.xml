<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/ic_launcher_foreground"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:background="@drawable/ic_launcher_foreground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dialog_image1"
                android:layout_width="258dp"
                android:layout_height="215dp"
                android:layout_marginStart="57dp"
                android:layout_marginEnd="57dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dialog_quantity1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="40dp"
                android:text="Lay-fsdf"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.113"
                app:layout_constraintStart_toEndOf="@+id/t"
                app:layout_constraintTop_toBottomOf="@+id/dialog_price1" />

            <TextView
                android:id="@+id/dialog_price1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="32dp"
                android:text="Lay-fsdf"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/dialog_quantity1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintStart_toEndOf="@+id/t2"
                app:layout_constraintTop_toBottomOf="@+id/dialog_name1" />

            <TextView
                android:id="@+id/dialog_name1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="96dp"
                android:layout_marginTop="60dp"
                android:text="Lay-fsdf"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/t1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dialog_status1"
                android:layout_width="92dp"
                android:layout_height="31dp"
                android:layout_marginStart="88dp"
                android:layout_marginTop="33dp"
                android:text="Lay-fsdf"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/t4"
                app:layout_constraintTop_toBottomOf="@+id/dialog_quantity1" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="64dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dialog_image1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/t"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Quantity"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dialog_image1"
                app:layout_constraintTop_toBottomOf="@+id/t2" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dialog_image1"
                app:layout_constraintTop_toBottomOf="@+id/t" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dialog_image1"
                app:layout_constraintTop_toBottomOf="@+id/t1" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:layout_marginStart="677dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/green"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.956" />

            <com.like.LikeButton
                android:id="@+id/star_button"
                android:layout_width="61dp"
                android:layout_height="48dp"
                android:layout_marginStart="38dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="312dp"
                android:layout_marginRight="312dp"
                android:layout_marginBottom="17dp"
                app:icon_size="25dp"
                app:icon_type="star"
                app:layout_constraintBottom_toTopOf="@+id/dialog_image1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>